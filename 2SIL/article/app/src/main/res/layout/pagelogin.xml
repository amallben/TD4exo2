<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical">
        <Button
                android:id="@+id/facebook_login_button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="300dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:tag="facebook_login_button"
                android:drawableLeft="@mipmap/ic_facebook_white_36dp"
                android:drawableStart="@mipmap/ic_facebook_white_36dp"
                android:textColor="@color/colorPrimary"
                android:text="@string/sign_in_facebook" />

        <Button
                android:id="@+id/google_login_button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:tag="google_login_button"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/ic_google_plus_white_36dp"
                android:drawableStart="@mipmap/ic_google_plus_white_36dp"
                android:textColor="@color/colorPrimary"
                android:text="@string/sign_in_google" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>